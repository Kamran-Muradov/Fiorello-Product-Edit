@model ProductDetailVM

@{
    ViewData["Title"] = "Detail";
}

<h1 class="card-title text-center">Product Detail</h1>
<div class="card mt-5">
    <div class="card-body">
        <div class="row mt-3">
            @foreach (var item in Model.Images)
            {
                <div class="col-3 pr-1">
                    <img src="~/img/@item.Image" class="mb-2 mw-100 w-100 rounded"
                         alt="image"
                         style=" height:200px;@(item.IsMain ? "border: 3px solid darkorchid;" : "")" />
                </div>
            }
        </div>
        <div class="d-flex mt-5 align-items-top">
            <div class="mb-0 flex-grow">
                <p class="mr-2 mb-2"><strong>Name:</strong> @Model.Name</p>
                <p class="mr-2 mb-2"><strong>Description:</strong> @Model.Description</p>
                <p class="mr-2 mb-2"><strong>Category:</strong> @Model.Category</p>
                <p class="mr-2 mb-2"><strong>Price:</strong> @Model.Price</p>
                <a class="btn btn-primary mt-3" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>
